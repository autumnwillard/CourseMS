<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.AddTermPage"
             Title="Add/Edit Term">
    <StackLayout BackgroundColor="Transparent" Padding="20">
        <Label Text="Name" FontSize="Large" />
        <Entry x:Name="entryTermName" Margin="0,0,0,25"></Entry>
            <Label Text="Start Date" FontSize="Large" />
        <DatePicker Margin="0,0,0,25" x:Name="StartDatePicker"></DatePicker>
            <Label Text="End Date" FontSize="Large" />
        <DatePicker Margin="0,0,0,25" x:Name="EndDatePicker"></DatePicker>
        <HorizontalStackLayout Spacing="10">
            <Button Text="Save" BackgroundColor="#327DA9" TextColor="White" Clicked="OnSaveClicked" FontAttributes="Bold" />
            <Button Text="Cancel" BackgroundColor="#404048" TextColor="White" Clicked="OnCancelClicked" FontAttributes="Bold" />
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>